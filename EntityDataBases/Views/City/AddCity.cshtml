@model EntityDataBases.Managers.Citys.CreateOrUpdateCityRequest
@{
    Layout = "~/Views/Shared/AddOrUpdate.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddCity</title>
</head>
<body>
    @using (Html.BeginForm("Create", "City", FormMethod.Post))
    {
        <div class="row">
            <div class="col-25">
                <label>Город: </label>
            </div>
            <div class="col-75">
                <input type="text" required id="Name" name="Name" />
            </div>
        </div><br />
        <div class="row">
            <input type="submit" value="Добавить город" />
        </div><br />
    }
    @using (Html.BeginForm("ShowCitys", "City", FormMethod.Get))
    {
        <div class="row">
            <input type="submit" value="Отмена" />
        </div>
    }
</body>
</html>
