@model IEnumerable<EntityDataBases.Storage.Entity.Storage>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowStorage</title>
    <style type="text/css" id="main">
    </style>
</head>
<body>
    <div>
        <table border="1">
            <caption><h1><strong>Склады</strong></h1></caption>
            <tr>
                <th>Номер склада:</th>
                <th>Адресс:</th>
                <th>Город:</th>
                <th colspan="2"></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td align="center"><strong>@item.StorageNumber</strong></td>
                    <td>@item.Address</td>
                    <td>@item.CityName</td>
                    <td width="155px"><a href="/Storage/UpdateStorage/@item.Id">Редактировать</a></td>
                    <td width="95px" ><a href="/Storage/Delete/@item.Id">Удалить</a></td>
                </tr>
            }
        </table>
        <br /><br />
        @using (Html.BeginForm("AddStorage", "Storage"))
        {
            <div>
                <input type="submit" value="Добавить новый склад" />
            </div>
        }
    </div>
</body>
</html>
