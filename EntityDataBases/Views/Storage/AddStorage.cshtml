@model EntityDataBases.Managers.Storages.CreateOrUpdateStorageRequest
@{
    Layout = "~/Views/Shared/AddOrUpdate.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddStorage</title>
</head>
<body>
    @using (Html.BeginForm("Create", "Storage", FormMethod.Post))
    {
        <div class="row">
            <div class="col-25">
                <label>Номер склада: </label>
            </div>
            <div class="col-75">
                <input type="text" required id="StorageNumber" name="StorageNumber" />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label>Адрес: </label>
            </div>
            <div class="col-75">
                <input type="text" required id="Address" name="Address" />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label>Город: </label>
            </div>
            <div class="col-75">
                <select required name="CityId">
                    @foreach (var item in ViewBag.Citys)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
        </div><br />
        <div class="row">
            <input type="submit" value="Добавить склад" />
        </div><br />
    }
    @using (Html.BeginForm("ShowStorages", "Storage", FormMethod.Get))
    {
        <div class="row">
            <input type="submit" value="Отмена" />
        </div>
    }
</body>
</html>
