@model EntityDataBases.Storage.Entity.CategoryParts
@{
    Layout = "~/Views/Shared/AddOrUpdate.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UpdateCategoryParts</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("Update", "CategoryParts", FormMethod.Post))
        {
            <input id="CategoryPartsId" name="CategoryPartsId" type="hidden" value="@Model.Id" />
            <div class="row">
                <div class="col-25">
                    <label>Название категории: </label>
                </div>
                <div class="col-75">
                    <input id="Name" required type="text" name="Name" value="@Model.Name" />
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label>Описание категории: </label>
                </div>
                <div class="col-75">
                    <textarea id="Description" required name="Description" cols="40" rows="3">@Model.Description</textarea>
                </div>
            </div><br />
            <div class="row">
                <input type="submit" value="Редактировать категорию" />
            </div><br />
        }
        @using (Html.BeginForm("ShowCategorysParts", "CategoryParts", FormMethod.Get))
        {
            <div class="row">
                <input type="submit" value="Отмена" />
            </div>
        }
    </div>
</body>
</html>
