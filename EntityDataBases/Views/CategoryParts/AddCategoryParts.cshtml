@model EntityDataBases.Managers.CategorysParts.CreateOrUpdateCategoryRequest
@{
    Layout = "~/Views/Shared/AddOrUpdate.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddCategoryParts</title>
</head>
<body>
    @using (Html.BeginForm("Create", "CategoryParts", FormMethod.Post))
    {
        <div class="row">
            <div class="col-25">
                <label>Название категории: </label>
            </div>
            <div class="col-75">
                <input id="Name" required type="text" name="Name" />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label>Описание категории: </label>
            </div>
            <div class="col-75">
                <textarea id="Description" required name="Description" cols="40" rows="3"></textarea>
            </div>
        </div><br />
        <div class="row">
            <input type="submit" value="Добавить категорию" />
        </div><br />
    }
    @using (Html.BeginForm("ShowCategorysParts", "CategoryParts", FormMethod.Get))
    {
        <div class="row">
            <input type="submit" value="Отмена" />
        </div>
    }
</body>
</html>
