@model IEnumerable<EntityDataBases.Storage.Entity.CategoryParts>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowCategorysParts</title>
    <style type="text/css" id="main">
    </style>
</head>
<body>
    <div>
        <table border="1">
            <caption><h1><strong>Категории запчастей</strong></h1></caption>
            <tr>
                <th>Категория:</th>
                <th>Описание:</th>
                <th colspan="2"></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td align="center"><strong>@item.Name</strong></td>
                    <td>@item.Description</td>
                    <td width="155px"><a href="/CategoryParts/UpdateCategoryParts/@item.Id">Редактировать</a></td>
                    <td width="95px"><a href="/CategoryParts/Delete/@item.Id">Удалить</a></td>
                </tr>
            }
        </table>

        <br /><br />
        @using (Html.BeginForm("AddCategoryParts", "CategoryParts"))
        {
            <div>
                <input type="submit" value="Добавить новую категорию" />
            </div>
        }
    </div>
</body>
</html>
